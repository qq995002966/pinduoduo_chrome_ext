{
  "manifest_version": 2,
  "name": "拼多多快速购买",
  "description": "第一个版本，为了能够快速从淘宝上面购买商品。",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://mms.pinduoduo.com/*"
      ],
      "js": [
        "js/pinduoduo.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://buy.taobao.com/*",
        "https://buy.taobao.com/*"
      ],
      "js": [
        "js/taobao.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://buy.tmall.com/*",
        "https://buy.tmall.com/*"
      ],
      "js": [
        "js/tmall.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "images/*"
  ],
  "commands": {
    "getUserInfo": {
      "suggested_key": {
        "windows": "Ctrl+Shift+X"
      },
      "description": "get user info"
    },
    "setUserInfo": {
      "suggested_key": {
        "windows": "Ctrl+Shift+V"
      },
      "description": "set user info"
    }
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}